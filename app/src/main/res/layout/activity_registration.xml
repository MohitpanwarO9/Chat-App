<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52CA63"
    tools:context=".login.Registration">

    <EditText
        android:id="@+id/Ed_Username_regist"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/round_text_field"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ed_Email_regist"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_text_field"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Ed_Username_regist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Ed_Username_regist"
        app:layout_constraintTop_toBottomOf="@+id/Ed_Username_regist" />

    <EditText
        android:id="@+id/Ed_Password_regist"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_text_field"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Ed_Email_regist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Ed_Email_regist"
        app:layout_constraintTop_toBottomOf="@+id/Ed_Email_regist" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:text="Register"
        android:textColor="@color/white"
        android:background="@drawable/round_register_button"
        app:layout_constraintEnd_toEndOf="@+id/Ed_Password_regist"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/Ed_Password_regist"
        app:layout_constraintTop_toBottomOf="@+id/Ed_Password_regist" />

    <TextView
        android:id="@+id/Already_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Already have an account?"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button" />

    <Button
        android:id="@+id/Bt_selectImage_regist"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:text="Select image"
        android:textColor="@color/white"
        android:background="@drawable/round_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selected_img_regist"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/Bt_selectImage_regist"
        app:layout_constraintEnd_toEndOf="@+id/Bt_selectImage_regist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Bt_selectImage_regist"
        app:layout_constraintTop_toTopOf="@+id/Bt_selectImage_regist" />

</androidx.constraintlayout.widget.ConstraintLayout>